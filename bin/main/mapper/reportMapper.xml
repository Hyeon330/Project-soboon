<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.semiproject.soboon.dao.ReportDAO">
  <select id="selectView" resultType="BoardVO">
		select no,reporter,suspect,report_contetn,board_no from report where reporter=#{param1} <!-- 추후 수정바람 -->
	</select>
	<select id="Reportcnt" resultType="int">
		select count(reporter) cnt from report
	</select>
	<select id="ReportList" resultType="ReportVO">
		select reporter, suspect, report_content, board_no from report order by no limit ${recordPerPage} offset ${offsetIndex}
	</select>
	<delete id="ReportMultiDelete">
		delete from report
         <where>
            <foreach item="item" collection="noList" open="board_no in (" separator=", " close=")">
                #{item}
            </foreach>
         </where>
	</delete>
 </mapper>